  "extends": "./tsconfig.base.json",
  "include": ["src"],
  "exclude": ["tests", "./src/**/*.spec.ts", "./src/**/*.mock.ts", "./src/**/*.handlers.ts"],
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": "./src"
  }
}
